<header class="h-20 flex items-center">
  <div class="container mx-auto px-6 md:px-24 flex items-center justify-between">
    <!-- Logo on the left -->
    <div class="flex-shrink-0">
      <%= link_to root_path do %>
        <%= image_tag "logo.svg", class: "h-8", alt: "Logo" %>
      <% end %>
    </div>

    <!-- Navigation links in center --><!-- Hide on mobile -->
<!--    <nav class="hidden md:flex items-center space-x-10">-->
      <%#= link_to "Send", "#", class: "text-white hover:text-gray-300" %>
      <%#= link_to "Earn", "#", class: "text-white hover:text-gray-300" %>
      <%#= link_to "NFT", "#", class: "text-white hover:text-gray-300" %>
<!--    </nav>-->

    <!-- App store icons on the right -->
    <div class="flex items-center space-x-4">
      <%= link_to "#", class: "text-white hover:opacity-80" do %>
        <%= image_tag "app-store.svg", class: "h-8", alt: "App Store" %>
      <% end %>
      <%= link_to "#", class: "text-white hover:opacity-80" do %>
        <%= image_tag "play-store.svg", class: "h-8", alt: "Play Store" %>
      <% end %>
    </div>
  </div>
</header>

<main class="mx-auto px-6 md:px-24 text-center mt-20 md:mt-40 relative">
  <div class="absolute w-[427px] h-[427px] -left-80 top-[40px] bg-[#8126C8] blur-[80px] rounded-full hidden lg:block"></div>
  <div class="absolute w-[427px] h-[427px] -right-80 top-[40px] bg-[#8126C8] blur-[80px] rounded-full hidden lg:block"></div>

  <!-- Wallet icon -->
  <div class="flex justify-center mb-6">
    <%= image_tag "wallet-icon.svg", alt: "Wallet Icon" %>
  </div>

  <!-- Main heading -->
  <h1 class="text-white text-[32px] md:text-[56px] leading-[40px] md:leading-[68px] mb-4 font-inter mx-auto max-w-full md:max-w-[671px]">
    Reliable Multichain Crypto Wallet
  </h1>

  <!-- Subtext -->
  <p class="text-[#9F9F9F] text-base md:text-lg leading-6 md:leading-7 max-w-xl mx-auto px-4 md:px-0">
    Fast, secure and packed with features -<br class="hidden md:block">
    maximize your crypto's potential all in one place.
  </p>

  <!-- Store buttons -->
  <div class="flex flex-col md:flex-row justify-center items-center gap-4 mt-12">
    <!-- App Store button -->
    <%= link_to "#", class: "flex items-center border border-white rounded-[300px] w-[181.42px] h-[60px] bg-transparent hover:bg-white/5 transition-colors" do %>
      <%= image_tag "app-store-icon.svg", class: "ml-3 h-8 w-8", alt: "App Store" %>
      <div class="flex flex-col items-start ml-3 -space-y-1">
        <span class="text-[#9F9F9F] text-sm">Download on the</span>
        <span class="text-white text-md">App Store</span>
      </div>
    <% end %>

    <!-- Google Play button -->
    <%= link_to "#", class: "flex items-center border border-white rounded-[300px] w-[181.42px] h-[60px] bg-transparent hover:bg-white/5 transition-colors" do %>
      <%= image_tag "play-store-icon.svg", class: "ml-3 h-8 w-8", alt: "Google Play" %>
      <div class="flex flex-col items-start ml-3 -space-y-1">
        <span class="text-[#9F9F9F] text-sm">Get it on</span>
        <span class="text-white text-md">Google Play</span>
      </div>
    <% end %>
  </div>
</main>

<!-- Gradient line -->
<div class="flex justify-center mt-12 md:mt-20">
  <%= image_tag "gradient-line.svg", class: "h-[120px] md:h-[200px]", alt: "" %>
</div>
<!-- Features section with iPhone in center -->
<section class="container mx-auto px-6 md:px-24 mt-10 relative">
  <div class="grid grid-cols-1 xl:grid-cols-3 gap-8 items-center">
    <!-- Left side features -->
    <div class="space-y-8 xl:space-y-28 text-center xl:text-right">
      <div>
        <h3 class="text-white text-3xl mb-4">Assets</h3>
        <p class="text-[#9F9F9F]">Convenient switching between the seed phrases of your multi-assets.</p>
      </div>
      <div>
        <h3 class="text-white text-3xl mb-4">NFT</h3>
        <p class="text-[#9F9F9F]">Store, view, and manage all your NFTs in one secure place.</p>
      </div>
    </div>

    <%= image_tag "iphone-backgroud.svg", class: "absolute w-[480px] h-[480px] -z-10 left-1/2 -translate-x-1/2 hidden xl:block", alt: "iPhone Background" %>
    <!-- Center iPhone -->
    <div class="flex justify-center order-first xl:order-none relative">
      <%= image_tag "iphone.png", class: "w-[300px] h-[600px]", alt: "iPhone App Display" %>
    </div>

    <!-- Right side features -->
    <div class="space-y-8 xl:space-y-28 text-center xl:text-left">
      <div>
        <h3 class="text-white text-3xl mb-4">Earn</h3>
        <p class="text-[#9F9F9F]">Grow your assets with staking options. Start earning rewards today.</p>
      </div>
      <div>
        <h3 class="text-white text-3xl mb-4">Send</h3>
        <p class="text-[#9F9F9F]">Transfer your crypto securely and instantly with a few taps.</p>
      </div>
    </div>
  </div>
</section>

